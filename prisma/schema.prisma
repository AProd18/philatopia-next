datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? 
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  user               User    @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?
  profileImage  String? 
  aboutMe       String?   
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Stamp {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  yearIssued  Int
  user        String
  image       String?
  createdAt   DateTime @default(now())
  country     String   @default("Unknown") 

  collection  Collection? @relation("PhilatelyGallery", fields: [collectionId], references: [id])
  collectionId Int?
}


model Collection {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  yearIssued  Int
  user        String
  createdAt   DateTime @default(now())

  // Relation to multiple Stamp models
  stamps      Stamp[]  @relation("PhilatelyGallery")
}


